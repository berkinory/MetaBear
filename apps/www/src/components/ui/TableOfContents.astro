---
import { themeConfig } from "@/config";
import type { TOCProps } from "@/types";

const { toc = [] }: TOCProps = Astro.props;
---

<div class="toc-container" id="toc">
  <nav class="toc-nav">
    <ul class="toc-list" id="toc-list">
      <li class="toc-item toc-level-0">
        <a
          href="#"
          class="toc-link toc-title"
          title="Back to top"
          data-text="Back to top"
        >
          Back to top
        </a>
      </li>

      {
        toc.map((item) => (
          <li class={`toc-item toc-level-${item.level}`}>
            <a
              href={`#${item.id}`}
              class="toc-link"
              title={item.text}
              data-text={item.text}
            >
              {item.text}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</div>

<script
  is:inline
  define:vars={{
    toc: themeConfig.post.toc,
  }}
>
  const handleClick = (e) => {
    const link = e.target.closest(".toc-link");
    if (!link) {
      return;
    }

    e.preventDefault();

    if (link.classList.contains("toc-title")) {
      window.scrollTo({ behavior: "smooth", top: 0 });
      history.pushState(null, null, "#");
    } else {
      const href = link.getAttribute("href");
      if (href?.startsWith("#")) {
        const target = document.getElementById(href.substring(1));
        if (target) {
          const rect = target.getBoundingClientRect();
          const scrollTop =
            window.pageYOffset || document.documentElement.scrollTop;
          const offset = rect.top + scrollTop - 96;
          window.scrollTo({ behavior: "smooth", top: offset });
          history.pushState(null, null, href);
        }
      }
    }
  };

  (function initTableOfContents() {
    const state = {
      container: null,
      hasContent: false,
      headingMap: new Map(),
      headings: null,
      links: null,
      positions: [],
      scrollTimeout: null,
      titleLink: null,
    };

    const initElements = () => {
      state.container = document.querySelector(".toc-container");
      if (!state.container) {
        return false;
      }

      state.links = document.querySelectorAll(".toc-link");
      state.titleLink = document.querySelector(".toc-link.toc-title");

      state.headingMap.clear();
      state.targets = [];

      for (const link of state.links) {
        const href = link.getAttribute("href");
        if (href?.startsWith("#")) {
          const id = href.substring(1);
          const target = document.getElementById(id);
          if (target) {
            state.targets.push(target);
            state.headingMap.set(id, link);
          }
        }
      }

      return true;
    };

    const checkContent = () => {
      if (!state.container || !state.links) {
        return;
      }

      const tocItems = [...state.links].filter(
        (link) => !link.classList.contains("toc-title"),
      );
      state.hasContent = tocItems.length > 0;

      if (!state.hasContent) {
        state.container.style.display = "none";
      }
    };

    const cachePositions = () => {
      if (!state.targets?.length) {
        return;
      }

      const scrollTop = window.pageYOffset;
      state.positions = state.targets.map((target) => ({
        id: target.id,
        offsetTop: target.getBoundingClientRect().top + scrollTop,
      }));
    };

    const adjustPosition = () => {
      const contentWidth = "35rem";
      const centeredLayout = true;

      if (!state.container || !centeredLayout || !state.hasContent) {
        if (state.container) {
          state.container.style.display = "none";
        }
        return;
      }

      const pageWidth = window.innerWidth;
      const contentWidthValue = Math.max(Number.parseFloat(contentWidth), 25);
      const margin = (pageWidth - contentWidthValue * 16) / 2;
      const baseMinSpace = 11 * 16;
      const minSpace = toc ? baseMinSpace + 52 : baseMinSpace + 12;

      if (margin >= minSpace) {
        state.container.style.display = "block";
        state.container.classList.add("fixed-position");
        const leftPosition = toc ? margin - 176 - 40 : margin - 176;
        state.container.style.left = `${leftPosition}px`;
      } else {
        state.container.style.display = "none";
        state.container.classList.remove("fixed-position");
        state.container.style.left = "";
      }
    };

    const updateActive = () => {
      if (!state.links?.length || !state.positions.length) {
        return;
      }

      const scrollTop = window.pageYOffset + 100;
      let currentActive = null;

      for (let i = state.positions.length - 1; i >= 0; i -= 1) {
        if (scrollTop >= state.positions[i].offsetTop) {
          currentActive = state.positions[i].id;
          break;
        }
      }

      for (const link of state.links) {
        link.classList.remove("active");
      }

      if (currentActive && state.headingMap.has(currentActive)) {
        const activeLink = state.headingMap.get(currentActive);
        activeLink.classList.add("active");

        activeLink.scrollIntoView({
          behavior: "auto",
          block: "nearest",
          inline: "nearest",
        });
      } else if (state.titleLink && scrollTop < 500) {
        state.titleLink.classList.add("active");

        state.titleLink.scrollIntoView({
          behavior: "auto",
          block: "nearest",
          inline: "nearest",
        });
      }
    };

    const init = (retryCount = 0) => {
      const maxRetries = 5;

      if (initElements()) {
        checkContent();
        adjustPosition();
        cachePositions();

        if (state.container) {
          state.container.removeEventListener("click", handleClick);
          state.container.addEventListener("click", handleClick);
        }

        updateActive();
      } else if (retryCount < maxRetries) {
        setTimeout(() => init(retryCount + 1), 100);
      }
    };

    const handleScroll = () => {
      if (state.scrollTimeout) {
        cancelAnimationFrame(state.scrollTimeout);
      }
      state.scrollTimeout = requestAnimationFrame(updateActive);
    };

    const handleResize = () => {
      adjustPosition();
      requestAnimationFrame(cachePositions);
    };

    const cleanup = () => {
      if (state.scrollTimeout) {
        cancelAnimationFrame(state.scrollTimeout);
        state.scrollTimeout = null;
      }

      Object.assign(state, {
        container: null,
        hasContent: false,
        headingMap: new Map(),
        headings: null,
        links: null,
        positions: [],
        titleLink: null,
      });
    };

    document.addEventListener("astro:page-load", () => {
      cleanup();
      init();
    });

    document.addEventListener("astro:after-swap", () => {
      cleanup();
      init();
    });

    document.addEventListener("DOMContentLoaded", () => {
      if (!state.container || !state.hasContent) {
        init();
      }
    });

    window.addEventListener("resize", handleResize);
    window.addEventListener("scroll", handleScroll);
  })();
</script>

<style is:inline>
  .toc-container {
    width: 12rem;
    position: relative;
    left: -0.175em;
    opacity: 0;
    transition: opacity 0.2s ease-out;
    display: none;
  }

  .toc-container.fixed-position {
    opacity: 1;
    position: fixed;
    top: 12rem;
    margin-top: 0;
    padding-left: 1rem;
    z-index: 10;
    left: auto;
    max-height: calc(100vh - 18rem);
  }

  .toc-nav {
    font-family: var(--sans);
    overflow-y: auto;
    overflow-x: hidden;
    max-height: inherit;
    padding-right: 0.5rem;
    padding-top: 0.75rem;
    padding-bottom: 0.75rem;
    scrollbar-width: none;
  }

  .toc-nav::-webkit-scrollbar {
    display: none;
  }

  .toc-list,
  .toc-list li,
  .toc-item {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .prose .toc-container .toc-list {
    margin-left: 0 !important;
    padding-left: 0 !important;
  }

  .prose .toc-container .toc-list li {
    margin: 0 !important;
    padding: 0 !important;
  }

  .toc-item::before,
  .toc-item::marker {
    display: none;
  }

  .toc-link {
    display: block;
    color: transparent;
    text-decoration: none;
    position: relative;
    padding-left: 0;
    height: 1.125rem;
    width: 100%;
    min-height: 1rem;
    font-size: 0;
    line-height: 1.125rem;
    text-indent: 2rem;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    transition:
      color 0.2s ease-out,
      font-size 0.2s ease-out,
      text-indent 0.2s ease-out;
    cursor: pointer;
  }

  .toc-link::after {
    content: attr(data-text);
    position: absolute;
    left: -0.5rem;
    top: 0;
    font-family: var(--sans);
    font-size: var(--font-size-s);
    letter-spacing: var(--spacing-m);
    line-height: 1.125rem;
    color: var(--foreground);
    opacity: 0;
    transition:
      opacity 0.2s ease-out,
      left 0.2s ease-out;
    pointer-events: none;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    max-width: 100%;
  }

  .toc-link:hover::after {
    opacity: 1;
    left: -0.75rem;
  }

  .toc-level-0 .toc-link:hover::after {
    opacity: 0;
  }

  .toc-level-1 .toc-link:hover::before,
  .toc-level-2 .toc-link:hover::before,
  .toc-level-3 .toc-link:hover::before {
    width: 0.75rem;
    transition: width 0.1s ease-out;
  }

  .toc-link.active {
    color: var(--foreground);
  }

  .toc-level-0 .toc-link::before,
  .toc-level-1 .toc-link::before,
  .toc-level-2 .toc-link::before,
  .toc-level-3 .toc-link::before {
    content: "";
    position: absolute;
    left: 0;
    top: 50%;
    width: 1.75rem;
    height: 1px;
    background-color: var(--text-tertiary);
    transform: translateY(-50%);
    opacity: 0.4;
    transition: all 0.1s ease-out;
  }

  .toc-link:hover::before,
  .toc-link.active::before {
    opacity: 0.8;
    background-color: var(--foreground);
  }

  @media (max-width: 768px) {
    .toc-container {
      display: none !important;
    }
  }
</style>
