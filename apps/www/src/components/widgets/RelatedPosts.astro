---
import { getCollection } from "astro:content";

interface Props {
    currentPostId: string;
    category?: string;
}

const { currentPostId, category } = Astro.props;

const allPosts = await getCollection("posts");
const availablePosts = allPosts.filter((post) => post.id !== currentPostId);

const sortedAvailablePosts = [...availablePosts].toSorted(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

let relatedPosts;

if (category) {
    const sameCategoryPosts = sortedAvailablePosts.filter(
        (post) => post.data.category === category,
    );

    const otherPosts = sortedAvailablePosts.filter(
        (post) => post.data.category !== category,
    );

    if (sameCategoryPosts.length >= 4) {
        relatedPosts = sameCategoryPosts.slice(0, 4);
    } else {
        relatedPosts = [...sameCategoryPosts, ...otherPosts].slice(0, 4);
    }
} else {
    relatedPosts = sortedAvailablePosts.slice(0, 4);
}
---

{
    relatedPosts.length > 0 && (
        <aside class="related-posts" aria-labelledby="related-posts-heading">
            <h2 id="related-posts-heading">Related Resources</h2>
            <ul class="related-posts-list">
                {relatedPosts.map((post) => (
                    <li class="related-post-item">
                        <a href={`/${post.id}`} class="related-post-link">
                            <span class="related-post-title">
                                {post.data.title}
                            </span>
                            {post.data.description && (
                                <span class="related-post-description">
                                    {post.data.description}
                                </span>
                            )}
                        </a>
                    </li>
                ))}
            </ul>
        </aside>
    )
}

<style>
    .related-posts {
        margin-top: 6rem;
        padding-top: 3rem;
        border-top: 1px solid var(--border);
    }

    #related-posts-heading {
        font-size: var(--font-size-l);
        font-weight: var(--font-weight-bold);
        margin: 0 0 1.5rem 0;
        color: var(--foreground);
    }

    .related-posts-list {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .related-post-item {
        margin: 0;
        padding: 0;
    }

    .related-post-item::before {
        display: none;
    }

    .related-post-link {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        text-decoration: none;
        color: var(--foreground);
        transition: opacity 0.2s ease-out;
    }

    .related-post-link:hover {
        opacity: 0.7;
    }

    .related-post-title {
        font-size: var(--font-size-m);
        font-weight: var(--font-weight-bold);
        line-height: 1.4;
        color: var(--foreground);
    }

    .related-post-description {
        font-size: var(--font-size-s);
        line-height: 1.6;
        color: var(--muted-foreground);
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    @media (max-width: 768px) {
        .related-posts {
            margin-top: 4rem;
        }

        #related-posts-heading {
            font-size: 1.25rem;
        }
    }
</style>
