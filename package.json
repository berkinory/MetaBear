{
  "name": "MetaBear",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check": "ultracite fix && oxfmt --write .",
    "check-types": "turbo check-types",
    "www:dev": "turbo -F www dev",
    "www:build": "turbo -F www build",
    "extension:dev": "turbo -F extension dev",
    "extension:build": "turbo -F extension build",
    "extension:zip": "turbo -F extension zip",
    "docker:up": "docker compose up",
    "docker:build": "docker compose build",
    "docker:dev": "docker compose -f docker-compose.dev.yml up"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@MetaBear/config": "workspace:*",
    "@typescript/native-preview": "latest",
    "lefthook": "^2.0.13",
    "oxfmt": "latest",
    "oxlint": "latest",
    "turbo": "^2.6.3",
    "ultracite": "7.0.12"
  },
  "packageManager": "bun@1.3.3",
  "catalog": {
    "dotenv": "^17.2.2",
    "zod": "^4.1.13",
    "@types/bun": "^1.3.8",
    "@types/node": "^22.10.5",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}
